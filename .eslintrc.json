{
  "env": {
    "node": true
  },
  "extends": [
    "prettier",
    "@gitlab"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "requireConfigFile": false
  },
  "ignorePatterns": [
    "/coverage/**",
    "/dev/**"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "node/no-unsupported-features/es-syntax": [
      "error",
      {
        "ignores": [
          "dynamicImport",
          "modules"
        ]
      }
    ]
  }
}