{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020", // Node.js 14
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "./examples/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    },
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true
  }
}
