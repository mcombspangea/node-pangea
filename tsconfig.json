{
  "compilerOptions": {    
    "target": "es2020", // Node.js 14
    "module": "ESNext",
    "moduleResolution": "node",

    "outDir": "./dist/src",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist/types",

    "skipLibCheck": true
  },

  "include": ["./src/*", "./tests/*"],
  
}
